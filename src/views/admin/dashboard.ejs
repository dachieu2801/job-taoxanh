<!DOCTYPE html>
<html lang="vi">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>
    <%= title %>
  </title>
  <link href="/styles/output.css" rel="stylesheet" />
  <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/notyf/notyf.min.css" />
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.css" />
  <script src="https://cdn.jsdelivr.net/npm/notyf/notyf.min.js"></script>

  <script src="https://unpkg.com/vue@3/dist/vue.global.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
</head>

<body class="h-screen bg-gray-200">
  <header class="bg-white fixed top-0 left-0 w-full flex items-center px-6 h-16 shadow-lg">
   
    <!-- Logo Section -->
    <div class="w-64 text-left font-bold text-xl border-solid">
      <a href="#">APPLE&nbsp;<span class="text-primary">GREEN</span></a>
    </div>
    <!-- Active Route Section -->
    <div class="text-left text-gray-700 text-2xl font-bold">
      <span>Active Route</span>
    </div>
  </header>

  <!-- Sidebar -->
  <aside class="fixed top-16 left-0 w-64 h-[calc(100vh-4rem)] bg-white text-gray-500 flex flex-col">
    <nav class="mt-8 space-y-4">
      <a href="#" class="block px-6 py-2 hover:bg-gray-200">Dashboard</a>
      <a href="#" class="block px-6 py-2 hover:bg-gray-200">Transactions</a>
      <a href="#" class="block px-6 py-2 hover:bg-gray-200">Settings</a>
    </nav>
  </aside>
  <form action="/admin/logout" method="POST">
    <button type="submit">text<button>
  </form>
  <!-- Main Content -->
  <main class="ml-64 mt-16 p-6">
    <canvas id="revenueChart" width="400" height="400"></canvas>
  </main>
</body>
<script>

  const ctx = document.getElementById("revenueChart").getContext("2d");
  const revenueChart = new Chart(ctx, {
    type: "line", // Line chart for revenue over time
    data: {
      labels: ["Day 1", "Day 2", "Day 3", "Day 4", "Day 5", "Day 6", "Day 7"], // Labels for each day
      datasets: [
        {
          label: "Revenue ($)",
          data: [1500, 2000, 1800, 2200, 2400, 2100, 2300], // Revenue for each day
          backgroundColor: "rgba(75, 192, 192, 0.2)", // Area under the line
          borderColor: "rgba(75, 192, 192, 1)", // Line color
          borderWidth: 2, // Line thickness
          fill: true, // Fills the area under the line
        },
      ],
    },
    options: {
      scales: {
        y: {
          beginAtZero: true, // Start the y-axis at 0
          title: {
            display: true,
            text: "Revenue ($)",
          },
        },
        x: {
          title: {
            display: true,
            text: "Days",
          },
        },
      },
      plugins: {
        title: {
          display: true,
          text: "Revenue for the Last 7 Days", // Title of the chart
          font: {
            size: 18,
          },
        },
      },
    },
  });
</script>

</html>